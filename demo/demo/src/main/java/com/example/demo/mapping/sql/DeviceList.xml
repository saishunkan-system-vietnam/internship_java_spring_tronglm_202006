<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapping.MapperDeviceList">
	<select id="countDeviceOfCategory" parameterType="int"
		resultType="int">
		SELECT COUNT(*) FROM device_list WHERE id_category = #{id};
	</select>
	
</mapper>